@model Management.Models.GalleryDetailsViewModel
@{
    var uploadUrl = Url.Action("Upload", "Gallery", new
    {
        Model.ProductId
    });
}

<div class="card">
    <div class="card-body">
        <a hx-get="@uploadUrl" hx-target="#gallery" class="btn btn-primary float-end">Upload Picture</a>
    </div>
    @if (Model.PictureUrls.Any())
    {
            <ul class="list-group list-group-flush">
            @foreach (var picture in Model.PictureUrls)
            {
                var url = "http://management.ecommerce-store-builder.dev/" + picture;
                <li class="list-group-item">
                   <img src="@url" class="m-1" width="50" height="50"/>Cras justo odio
                </li>
            }
        </ul>
    }
</div>