<form method="POST">
    <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password">
    </div>
    
    <div class="mb-3">
        <label for="accountId" class="form-label">Simulate Account Id</label>
        <input type="accountId" class="form-control text-danger" id="accountId" name="accountId">
    </div>
    
    <div class="mb-3">
        <label for="storeId" class="form-label">Simulate StoreId Id</label>
        <input type="storeId" class="form-control text-danger" id="storeId" name="storeId">
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
    
    @Html.AntiForgeryToken()
</form>